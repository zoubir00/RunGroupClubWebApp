@model IEnumerable<Race>
@{
    ViewData["Title"] = "Index";
}

<h1>Races</h1>
<div class="row mb-2">
    @foreach (var item in Model)
    {
        <div class="col-md-6">
            <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                <div class="col p-4 d-flex flex-column position-static">
                    <strong class="d-inline-block mb-2 text-success">@item.Title</strong>
                    <h3 class="mb-0">@item.RaceCategory</h3>
                    <div class="mb-1 text-muted">Nov 11</div>
                    <p class="mb-auto">This is a wider card with supporting text below as a natural lead-in to additional content.</p>
                    <a asp-controller="Race" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary">Detail</a>
                </div>
                <div class="col-auto d-none d-lg-block">
                    <img src="@item.Image"  />
                </div>
            </div>
        </div>

    }
</div>
