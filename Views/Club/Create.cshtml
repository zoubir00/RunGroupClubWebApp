@using RunGroupClubWebApp.Data.Enum
@using RunGroupClubWebApp.ViewModel;
@model CreateClubViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<form method="post" asp-action="Create" enctype="multipart/form-data">
    <input type="hidden" id="AppUserId" name="AppUserId" asp-for="AppUserId" />
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Title ">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" type="text" class="form-control" id="exampleInputPassword1" placeholder="Description">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="ClubCategory">Club category</label>
        <select asp-for="ClubCategory" asp-items="@Html.GetEnumSelectList<ClubCategory>()" class="form-control">
            <option>--Select--</option>
        </select>
    </div>  

    <!--Adress-->

    <div class="form-group">
        <label asp-for="Address.Street">Street</label>
        <input asp-for="Address.Street" type="text" class="form-control" id="exampleInputPassword1" placeholder="Description">
        <span asp-validation-for="Address.Street" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address.City">City</label>
        <input asp-for="Address.City" type="text" class="form-control" id="exampleInputPassword1" placeholder="Description">
        <span asp-validation-for="Address.City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address.State">State</label>
        <input asp-for="Address.State" type="text" class="form-control" id="exampleInputPassword1" placeholder="Description">
        <span asp-validation-for="Address.State" class="text-danger"></span>
    </div>
    <!--Image-->
    <div class="form-group">
        <label asp-for="Image">Image</label>
        <input asp-for="Image" type="file" class="form-control" id="exampleInputPassword1" placeholder="Description">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
</form>

