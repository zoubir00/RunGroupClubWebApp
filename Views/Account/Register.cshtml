@using RunGroupClubWebApp.ViewModel
@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<style>
    .divider:after,
    .divider:before {
        content: "";
        flex: 1;
        height: 1px;
        background: #eee;
    }
</style>
<h1>Login</h1>
<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                     class="img-fluid" alt="Phone image">
            </div>
            @if (TempData["Error"] != null)
            {
                <div class="col-md-12 offset-3">
                    <span><b>Sorry</b> - @TempData["Error"]</span>
                </div>
            }
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <form method="post" asp-action="Register">
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <input type="email" asp-for="Email" id="form1Example13" class="form-control form-control-lg" />
                        <label class="form-label" asp-for="Email" for="form1Example13">Email address</label>
                        <span asp-validation-for="Email"></span>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <input type="password" asp-for="Password" id="form1Example23" class="form-control form-control-lg" />
                        <label class="form-label" asp-for="Password" for="form1Example23">Password</label>
                        <span asp-validation-for="Password"></span>

                    </div>
                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <input type="password" asp-for="ConfirmPassword" id="form1Example23" class="form-control form-control-lg" />
                        <label class="form-label" asp-for="ConfirmPassword" for="form1Example23">Confirm Password</label>
                        <span asp-validation-for="ConfirmPassword"></span>

                    </div>

                    <!-- Submit button -->
                    <input type="submit" class="btn btn-success btn-lg btn-block" value="Sign up" />

                    <div class="divider d-flex align-items-center my-4">
                        <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
                    </div>

                    <a class="btn btn-primary btn-lg btn-block" style="background-color: #3b5998" href="#!"
                       role="button">
                        <i class="fab fa-facebook-f me-2"></i>Continue with Facebook
                    </a>
                    <a class="btn btn-primary btn-lg btn-block" style="background-color: #55acee" href="#!"
                       role="button">
                        <i class="fab fa-twitter me-2"></i>Continue with Twitter
                    </a>

                </form>
            </div>
            </>
        </div>
</section>